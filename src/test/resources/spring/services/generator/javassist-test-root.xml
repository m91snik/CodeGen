<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.donriver.example.code_gen"/>

    <bean id="classGenerator" class="com.donriver.example.code_gen.generator.impl.JavassistClassGenerator"/>

    <bean id="classRegistrator" class="com.donriver.example.code_gen.registrator.JavassistClassRegistrator">
        <property name="targetImplToProxyMap">
            <map key-type="java.lang.Object" value-type="java.lang.String">
                <entry key-ref="testTarget" value="TestJavassistProxy"/>
            </map>
        </property>
        <property name="classGenerator" ref="classGenerator"/>
    </bean>

</beans>
